; vim: ft=colortemplate fdm=marker

; Information {{{
Full name:   WWDC16
Short name:  wwdc16
Author:      Lifepillar <lifepillar@lifepillar.me>
Website:     https://github.com/lifepillar/vim-wwdc16-theme
Description: Colorful dark color scheme for Vim inspired by Apple's WWDC16 page
License:     This file is placed in the public domain
Neovim:      yes
; }}}

; Documentation {{{
Include: _help.colortemplate
; }}}

; Common linked groups {{{
Repeat            -> Statement
QuickFixLine      -> Search
StatusLineTerm    -> StatusLine
StatusLineTermNC  -> StatusLineNC
Conditional       -> Statement
Define            -> PreProc
Exception         -> Statement
Macro             -> PreProc
PreCondit         -> PreProc
Tag               -> Special
Typedef           -> Type
lCursor           -> Cursor
; }}}

Background: dark

; Color palette {{{
; Color name                GUI                  Base256    Base16
Color: black                rgb( 36,  41,  46)    ~         Black
Color: red                  rgb(182,  27,  120)   ~         DarkRed
Color: green                rgb( 26, 178,  183)   ~         DarkGreen
Color: yellow               rgb(201, 131,  81)    ~         DarkYellow
Color: blue                 rgb( 169, 212, 215)   ~         DarkBlue
Color: magenta              rgb(244,  188, 215)   ~         DarkMagenta
Color: cyan                 rgb(21, 175, 180)     ~         DarkCyan
Color: white                rgb(238, 238, 238)    ~         LightGray
Color: brightblack          rgb( 119,  140,  163) ~         DarkGray
Color: brightred            rgb(238,  106,  164)  ~         Red
Color: brightgreen          rgb(96, 187, 195)     ~         Green
Color: brightyellow         rgb(247, 232, 17)     ~         Yellow
Color: brightblue           rgb( 154, 212, 223)   ~         Blue
Color: brightmagenta        rgb(244, 188, 215)    ~         Magenta
Color: brightcyan           rgb(  172, 215, 221)  ~         Cyan
Color: brightwhite          rgb(224, 224, 237)    ~         White

Term Colors: black red green yellow blue magenta cyan white
Term Colors: brightblack brightred brightgreen brightyellow
Term Colors: brightblue brightmagenta brightcyan brightwhite
; }}}

; Default highlight groups {{{
