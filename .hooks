#!/usr/bin/zsh

# git commands
alias config='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# file editing shortcuts
alias v="nvim"
alias vim="nvim"

# Desktop environment config file edting
alias zshrc="nvim ~/.zshrc"
alias bspwmrc="nvim ~/.config/bspwm/bspwmrc"
alias i3rc="nvim ~/.config/i3/config"
alias polyconfig="nvim ~/.config/polybar/config"
alias sxhkdrc="nvim ~/.config/sxhkd/sxhkdrc"
alias termconfig="nvim  ~/.config/termite/config"
alias bspreload="sh ~/.config/bspwm/bspwmrc"

#fasd
alias a='fasd -a'        # any
alias s='fasd -si'       # show / search / select
alias d='fasd -d'        # directory
alias f='fasd -f'        # file
alias sd='fasd -sid'     # interactive directory selection
alias sf='fasd -sif'     # interactive file selection
alias z='fasd_cd -d'     # cd, same functionality as j in autojump
alias zz='fasd_cd -d -i' # cd with interactive selection

# yaourt and pacman commands
alias unlockdb="sudo rm /var/lib/pacman/db.lck && echo 'Unlocked...'"

# general commands
alias py="python"
alias py2="python2"
alias j="jump"
alias connect="nmcli dev wifi connect"
alias checkstyle="python ~/.scripts/checkstyle.py"
alias code="sh ~/.VSCode/bin/code &"

# Functions

# Compiling c file to compiled folder with following flags
function compile() {
    cc -Wall -ansi -pedantic -o ../compiled/$1 $2
}

# List files in a directory as soon as you cd into it.
function cds() {
    cd $1 && ls
}

# Git push
function gitpu() {
    git push $1 master
}

# Git commit
function gitco() {
    git commit -m "$1"
}

# Git add 
function gitadd() {
    if ($1 == '') {
        git add -A
    } else {
        git add $1
    }
}


# a visual recursive list of all files and directories
function tree() {
    find . | sed -e 's/[^\/]*\//|--/g' -e 's/-- |/    |/g' | $PAGER
}

# recursive text search (ack is also nifty)
function f() {
    find . -name '*' | xargs grep -l $1
}

# recursive search and replace (ignoring hidden files and dirs), example: replace foo bar
function replace()  {
    find . \( ! -regex '.*/\..*' \) -type f | xargs perl -pi -e "s/$1/$2/g"
}
